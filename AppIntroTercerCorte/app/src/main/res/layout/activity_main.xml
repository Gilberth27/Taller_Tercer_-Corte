<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="sendMessage"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido al intro de apps con Android Studio"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.039" />

    <Button
        android:id="@+id/btnrectangulo"
        android:layout_width="143dp"
        android:layout_height="37dp"
        android:text="Rectangulo"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="267dp" />

    <Button
        android:id="@+id/btncuadrado"
        android:layout_width="126dp"
        android:layout_height="39dp"
        android:text="Cuadrado"
        tools:layout_editor_absoluteX="248dp"
        tools:layout_editor_absoluteY="258dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="37dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/selecionar"
        tools:layout_editor_absoluteX="187dp"
        tools:layout_editor_absoluteY="56dp" />

    <Button
        android:id="@+id/btntriangulo"
        android:layout_width="127dp"
        android:layout_height="41dp"
        android:text="Triangulo"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="604dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona la figura con la que deseas trabajar"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="104dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="58dp"
        app:srcCompat="@drawable/rectangulo"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="182dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/btncuadrado"
        app:srcCompat="@drawable/cuadrado"
        tools:layout_editor_absoluteX="281dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="70dp"
        android:layout_height="59dp"
        app:srcCompat="@drawable/trian"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="512dp" />

</androidx.constraintlayout.widget.ConstraintLayout>